<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.Interface"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20">
        <Label text="Forgot Password" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TextField fx:id="phoneNumberField" promptText="Enter your phone number" />

        <Button text="Send Verification Code"  />

        <HBox alignment="CENTER" spacing="10">
            <Label text="Enter Verification Code:" />
            <TextField fx:id="verificationCodeField" promptText="Verification Code" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="New Password:" />
            <PasswordField fx:id="passwordField" promptText="New Password" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Confirm New Password:" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" />
        </HBox>

        <Button text="Reset Password"  />
    </VBox>

</AnchorPane>
